<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#222222">

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dibuja una figura"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/detailsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PrecisiÃ³n: --% | Distancia: --"
        android:textColor="#BBBBBB"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"/>

    <com.example.shapesignatureapp.DrawingView
        android:id="@+id/drawingView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descriptor de Fourier:"
        android:textColor="#00FF00"
        android:textSize="12sp"
        android:layout_marginTop="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#333333"
        android:layout_marginBottom="10dp"
        android:padding="5dp">
        <TextView
            android:id="@+id/descriptorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esperando reconocimiento..."
            android:textColor="#AAAAAA"
            android:textSize="11sp"
            android:fontFamily="monospace"/>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Limpiar"
            android:backgroundTint="#AA0000" />

        <Button
            android:id="@+id/btnRecognize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reconocer"
            android:layout_marginStart="5dp" />

        <Button
            android:id="@+id/btnReport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reporte"
            android:layout_marginStart="5dp"
            android:backgroundTint="#008800" />
    </LinearLayout>
</LinearLayout>
